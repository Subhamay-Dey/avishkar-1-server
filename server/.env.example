# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB Connection
MONGO_URI=mongodb://localhost:27017/e_learning
# or
# MONGO_URI=mongodb+srv://<username>:<password>@cluster.mongodb.net/e_learning

# JWT Secret
JWT_SECRET=your_jwt_secret_here_use_a_strong_random_value
JWT_EXPIRE=7d
COOKIE_EXPIRE=7

# Cloudinary Configuration (for media uploads)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Twilio SMS (optional, can use email only)
TWILIO_ACCOUNT_SID=your_account_sid
TWILIO_AUTH_TOKEN=your_auth_token
TWILIO_PHONE_NUMBER=your_twilio_phone_number

# Email Configuration (Gmail with App Password)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-gmail@gmail.com
SMTP_PASS=your-16-character-app-password
FROM_EMAIL="LMS Platform <your-gmail@gmail.com>"

# Always use email for OTP delivery (recommended)
ALWAYS_SEND_EMAIL=true

# For development: show OTP in console
SHOW_OTP_IN_CONSOLE=true 